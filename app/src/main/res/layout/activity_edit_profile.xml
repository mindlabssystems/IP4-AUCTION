<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2352AB"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:id="@+id/go_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/ic_back"
                android:layout_centerInParent="true">

            </androidx.appcompat.widget.AppCompatImageView>
        </RelativeLayout>

        <TextView
            android:id="@+id/Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/go_back"
            android:layout_toRightOf="@+id/go_back"
            android:text="Edit Profile"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="30dp"
            android:orientation="vertical">

            <EditText
                android:id="@+id/first_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Name"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/last_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Last Name"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/company_name"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Company Name"
                android:layout_marginTop="10dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Email Address"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:layout_marginTop="10dp"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/job_tittle"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Job Tittle"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/mobile"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Mobile"
                android:inputType="number"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp" />



            <EditText
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:gravity="top"
                android:hint="Address"
                android:minLines="3"
                android:paddingStart="10dp"
                android:paddingTop="5dp"
                android:paddingEnd="10dp"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/country"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:drawableEnd="@drawable/ic_down_arrow"
                android:drawableRight="@drawable/ic_down_arrow"
                android:drawablePadding="8dp"
                android:hint="Country"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp"
                android:gravity="center_vertical"/>
            <EditText
                android:id="@+id/state"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:drawablePadding="8dp"
                android:hint="State"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/city"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:drawablePadding="8dp"
                android:hint="City"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp"
                android:gravity="center_vertical"/>

            <EditText
                android:id="@+id/pincode"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ic_email_bg"
                android:hint="Post code"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:singleLine="true"
                android:textColorHint="@color/violet_text"
                android:textColor="@color/violet_text"
                android:textSize="14sp"
                android:maxLength="6"
                />

            <TextView
                android:id="@+id/updateBut"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/ic_oval_green"
                android:gravity="center"
                android:text="Update Profile"
                android:textColor="#FFFFFF"
                android:textSize="18sp" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6FF8F6F6"
        android:elevation="4dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.wang.avi.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:indicatorColor="#1d79d8"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
