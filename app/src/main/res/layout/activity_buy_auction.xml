<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F4FF">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2352AB"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/ic_back">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/buy_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@+id/back"
            android:text="Buy"
            android:textColor="#FFFFFF"
            android:textSize="22sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F2F4FF"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F4FF"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:textColor="@color/blue_text"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">


                <TextView
                    android:id="@+id/auction_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text="AUCTION DETAILS"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/block_size_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:text="Block size"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/block_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"
                    android:visibility="gone">

                </TextView>


                <TextView
                    android:id="@+id/block_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:text="Block"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/registered_in_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Currently registered in"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/registered_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/number_of_address_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Number of addresses"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/number_of_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/further_details_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Further details"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/further_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:autoLink="web"
                    android:background="#ffffff"
                    android:textColor="@color/blue_text"
                    android:textColorLink="@color/blue_text"
                    android:textSize="16sp"
                    android:visibility="gone">

                </TextView>

                <View
                    android:id="@+id/view_transferable"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/transferable_to_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Transferable to"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/transferable_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/range_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Range"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"
                    android:visibility="gone">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/use_full_links_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Useful links:"
                    android:textColor="@color/light_grey"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/use_full_links"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:autoLink="web"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text=""
                    android:textColor="@color/light_violet"
                    android:textColorLink="@color/light_violet"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/blue_text"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/make_offer_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="MAKE YOUR OFFER"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#384388" />

                <TextView
                    android:id="@+id/offer_range_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="RANGE"
                    android:textColor="@color/white"
                    android:visibility="invisible"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_1"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/view_color"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent=".33" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide2"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:background="@color/view_color"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent=".66" />

                    <cn.iwgang.countdownview.CountdownView
                        android:id="@+id/timer"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:isConvertDaysToHours="true"
                        app:isHideTimeBackground="true"
                        app:isShowDay="false"
                        app:isShowHour="true"
                        app:isShowMillisecond="false"
                        app:isShowMinute="true"
                        app:isShowSecond="true"
                        app:isSuffixTextBold="true"
                        app:isTimeTextBold="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:suffixDay=""
                        app:suffixGravity="bottom"
                        app:suffixHour="h"
                        app:suffixHourLeftMargin="33dp"
                        app:suffixHourRightMargin="40dp"
                        app:suffixMinute="m"
                        app:suffixMinuteLeftMargin="40dp"
                        app:suffixMinuteRightMargin="33dp"
                        app:suffixSecondLeftMargin="0dp"
                        app:suffixSecondRightMargin="0dp"
                        app:suffixTextColor="@color/transparent"
                        app:suffixTextSize="18sp"
                        app:timeTextColor="@color/white"
                        app:timeTextSize="26sp" />


                    <!-- <TextView
                         android:id="@+id/hr_text"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:text="05"
                         android:textColor="@color/white"
                         android:textSize="20sp"
                         app:layout_constraintEnd_toStartOf="@+id/guide_1"
                        />-->

                    <TextView
                        android:id="@+id/hr"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Hours"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/guide_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/timer" />

                    <!-- <TextView
                         android:id="@+id/minit_text"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:text="03"
                         android:textColor="@color/white"
                         android:textSize="20sp"
                         app:layout_constraintEnd_toStartOf="@+id/guide2"
                         app:layout_constraintStart_toEndOf="@id/guide_1"
                         app:layout_constraintTop_toTopOf="parent" />-->

                    <TextView
                        android:id="@+id/minit"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Minutes"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toStartOf="@+id/guide2"
                        app:layout_constraintStart_toEndOf="@id/guide_1"
                        app:layout_constraintTop_toBottomOf="@id/timer" />


                    <!-- <TextView
                         android:id="@+id/second_text"
                         android:layout_width="0dp"
                         android:layout_height="wrap_content"
                         android:gravity="center"
                         android:text="25"
                         android:textColor="@color/white"
                         android:textSize="20sp"

                         app:layout_constraintEnd_toEndOf="parent"
                         app:layout_constraintStart_toEndOf="@id/guide2"
                         app:layout_constraintTop_toTopOf="parent" />-->

                    <TextView
                        android:id="@+id/second"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Seconds"
                        android:textAllCaps="true"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guide2"
                        app:layout_constraintTop_toBottomOf="@id/timer" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#384388"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guide_1"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#384388"
                        android:orientation="vertical"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/guide2"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:paddingTop="8dp"
                    android:paddingBottom="8dp"
                    android:text="03/20/2020 at 01:00 PM EDT (UTC-04:00)"
                    android:textColor="@color/white" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="16dp"
                    android:background="#384388" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp">

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guide_3"
                        android:layout_width="1dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent=".5" />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#384388"
                        android:orientation="vertical"
                        app:layout_constraintStart_toStartOf="@id/guide_3" />

                    <TextView
                        android:id="@+id/opening_bid_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:text="OPENING BID"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/guide_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/opening_bid"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toStartOf="@id/guide_3"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/opening_bid_title" />


                    <TextView
                        android:id="@+id/price_per_address_tx"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="15dp"
                        android:gravity="end"
                        android:text="$/ADDRESS"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guide_3"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/price_per_address"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/guide_3"
                        app:layout_constraintTop_toBottomOf="@+id/price_per_address_tx" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <View
                    android:id="@+id/last_view"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"
                    android:background="#384388" />

                <EditText
                    android:id="@+id/bid_amount_ed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/ic_email_bg"
                    android:inputType="number"
                    android:paddingStart="10dp"
                    android:paddingEnd="10dp"
                    android:textColor="@color/violet_text" />

                <RelativeLayout
                    android:id="@+id/mini_term_lay"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    app:layout_constraintTop_toBottomOf="@+id/view_3">

                    <TextView
                        android:id="@+id/min_term_title"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:text="minimum term :"
                        android:textAllCaps="true"
                        android:textColor="@color/light_text"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/mini_term"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@+id/min_term_title"
                        android:layout_toRightOf="@+id/min_term_title"
                        android:gravity="center_vertical"
                        android:paddingStart="6dp"
                        android:paddingLeft="6dp"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/make_offer_But"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:background="@drawable/ic_make_an_offer_bg"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:gravity="center"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:layout_centerInParent="true"
                        android:gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/ic_sale"
                            />

                        <TextView
                            android:id="@+id/make_offer_bu_tx"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginStart="5dp"
                            android:gravity="center"
                            android:text="Make an offer"
                            android:textAllCaps="true"
                            android:textColor="#FFFFFF"
                            android:textSize="18sp" />
                    </LinearLayout>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/watch_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:srcCompat="@drawable/ic_heart">

    </androidx.appcompat.widget.AppCompatImageView>

    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6FF8F6F6"
        android:elevation="4dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <com.wang.avi.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:indicatorColor="#1d79d8"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>