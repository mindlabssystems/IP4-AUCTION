<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2352AB"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/ic_back">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/sell_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@+id/back"
            android:text="Sell"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F4FF"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:textColor="@color/blue_text"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">


                <TextView
                    android:id="@+id/block_size_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:text="Block size"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/block_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/block_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:text="Block"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/registered_in_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Currently registered in"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/registered_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone" />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/number_of_address_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Number of addresses"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/number_of_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/further_details_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Further details"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/further_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:autoLink="web"
                    android:background="#ffffff"
                    android:textColor="@color/blue_text"
                    android:textColorLink="@color/blue_text"
                    android:textSize="16sp"
                    android:visibility="gone">

                </TextView>

                <View
                    android:id="@+id/view_transferable"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/transferable_to_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Transferable to"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/transferable_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/range_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Range"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"
                    android:visibility="gone">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/use_full_links_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Useful links:"
                    android:textColor="@color/light_violet"
                    android:textSize="16sp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/use_full_links"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:autoLink="web"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:textColor="@color/light_violet"
                    android:textColorLink="@color/light_violet"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/purchase_info_lay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                android:layout_marginBottom="20dp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/purchase_info"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text="Purchase info"
                    android:textColor="#3f526e"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/purchaser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingTop="15dp"
                    android:paddingEnd="16dp"
                    android:text="Purchaser"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/purchaser_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text=""
                    android:textColor="@color/blue_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/amount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:text="Total Amount"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/amount_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text=""
                    android:textColor="@color/blue_text"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/transaction_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingTop="10dp"
                    android:paddingEnd="16dp"
                    android:text="Transaction Date"
                    android:textColor="@color/light_grey"
                    android:textSize="12sp"
                    android:textAllCaps="true"/>
                <TextView
                    android:id="@+id/transaction_date_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp"
                    android:text=""
                    android:textColor="@color/blue_text"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6FF8F6F6"
        android:elevation="4dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <com.wang.avi.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:indicatorColor="#1d79d8"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>