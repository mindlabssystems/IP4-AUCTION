<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/topLayout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#2352AB"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            app:srcCompat="@drawable/ic_back">

        </androidx.appcompat.widget.AppCompatImageView>

        <TextView
            android:id="@+id/buy_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_toEndOf="@+id/back"
            android:layout_toRightOf="@+id/back"
            android:text="Buy"
            android:textColor="@color/white"
            android:textSize="22sp" />
    </RelativeLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/make_offer_But"
        app:layout_constraintTop_toBottomOf="@id/topLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#F2F4FF"
                android:gravity="start"
                android:paddingStart="16dp"
                android:paddingTop="10dp"
                android:paddingEnd="16dp"
                android:paddingBottom="10dp"
                android:text=""
                android:textColor="@color/blue_text"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical"
                android:paddingStart="16dp"
                android:paddingEnd="16dp">


                <TextView
                    android:id="@+id/block_size_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:text="Block size"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/block_size"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:text=""
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"
                    android:visibility="gone">
                </TextView>
                <TextView
                    android:id="@+id/block_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:text="Block"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/registered_in_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Currently registered in"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/registered_in"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

              <!--  <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />-->



                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/number_of_address_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Number of addresses"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp">

                </TextView>

                <TextView
                    android:id="@+id/number_of_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/further_details_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Further details"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/further_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textColor="@color/blue_text"
                    android:textSize="16sp"
                    android:autoLink="web"
                    android:textColorLink="@color/blue_text"
                    android:visibility="gone">

                </TextView>

                <View
                    android:id="@+id/view_transferable"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    />

                <TextView
                    android:id="@+id/transferable_to_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Transferable to"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"/>

                <TextView
                    android:id="@+id/transferable_to"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/range_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="#ffffff"
                    android:text="Range"
                    android:textAllCaps="true"
                    android:textColor="@color/light_grey"
                    android:textSize="14sp"
                    android:visibility="gone">

                </TextView>

                <TextView
                    android:id="@+id/range"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:background="#ffffff"
                    android:textAllCaps="true"
                    android:textColor="#0C1862"
                    android:textSize="16sp"
                    android:visibility="gone">

                </TextView>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/view_color" />

                <TextView
                    android:id="@+id/use_full_links_tx"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:paddingTop="10dp"
                    android:text="Useful links:"
                    android:textColor="@color/light_violet"
                    android:textSize="16sp"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/use_full_links"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:layout_marginTop="15dp"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text=""
                    android:autoLink="web"
                    android:textColor="@color/light_violet"
                    android:textColorLink="@color/light_violet"
                    android:textSize="16sp" />
            </LinearLayout>

            <!--  <TextView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="25dp"
                  android:gravity="center"
                  android:text="*Rent"
                  android:textColor="@color/violet_text" />-->
            <RelativeLayout
                android:id="@+id/mini_term_lay"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@+id/view_3"
                android:gravity="center">

                <TextView
                    android:id="@+id/min_term_title"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:text="minimum term :"
                    android:textAllCaps="true"
                    android:textColor="@color/violet_text"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/mini_term"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_toEndOf="@+id/min_term_title"
                    android:layout_toRightOf="@+id/min_term_title"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingLeft="6dp"
                    android:textColor="@color/blue_text"
                    android:textSize="14sp"
                    />

            </RelativeLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/watch_list"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="15dp"
        app:srcCompat="@drawable/ic_heart"
        android:layout_marginRight="20dp">
    </androidx.appcompat.widget.AppCompatImageView>
    <RelativeLayout
        android:id="@+id/make_offer_But"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginStart="30dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/ic_make_an_offer_bg"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            app:srcCompat="@drawable/ic_buy" />

        <TextView
            android:id="@+id/make_offer_bu_tx"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="5dp"
            android:layout_marginLeft="5dp"
            android:layout_toEndOf="@+id/img"
            android:layout_toRightOf="@+id/img"
            android:text="Buy"
            android:textColor="#FFFFFF"
            android:textSize="24sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/progress"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#6FF8F6F6"
        android:elevation="4dp"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/topLayout" >

        <com.wang.avi.AVLoadingIndicatorView
            style="@style/AVLoadingIndicatorView.Small"
            android:layout_width="50dp"
            android:layout_height="50dp"
            app:indicatorColor="#1d79d8"
            app:indicatorName="LineSpinFadeLoaderIndicator" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>